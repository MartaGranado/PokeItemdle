<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Pantalla de carga (ocultar cuando no estÃ© en uso) -->
    <LinearLayout
        android:id="@+id/loadingLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:visibility="gone">

        <include
            android:id="@+id/loadingScreen"
            layout="@layout/loading_screen" />
    </LinearLayout>

    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp"
        android:text="Bienvenido a PokeItemdle"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/classicButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/classic_button" />

    <Button
        android:id="@+id/descriptionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/descriptionButton" />

</LinearLayout>
